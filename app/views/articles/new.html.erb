<div class="container">
  <div class="form-container">
      <h1>New Article</h1>
    <%= form_for @article do |f| %>
    <div class="row">
        <p><%= f.label :title %></p> 
        <%= f.text_field :title, class: 'input' %>
    </div>
    <div class="row">
        <p><%= f.label :content %></p>
        <%= f.text_field :content, class: 'input input-text-field'%></div>
    <div class="row"><%= f.submit %></div>
    <% end %>
  </div>
</div>
